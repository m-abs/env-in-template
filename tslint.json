{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "no-console": false,
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "interface-name": false,
    "max-classes-per-file": false,
    "max-line-length": [true, 160],
    "no-arg": true,
    "no-inferrable-types": true,
    "no-require-imports": true,
    "quotemark": [
      true,
      "single"
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case",
      "allow-leading-underscore"
    ]
  }
}
